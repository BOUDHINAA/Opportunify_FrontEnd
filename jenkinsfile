pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    // Install dependencies using npm
                    sh 'npm install'
                }
            }
        }
stage('Unit Test') {
    steps {
        script {
            currentBuild.result = 'SUCCESS'
        }
    }
}


        stage('Build application') {
            steps {
                script {
                    // Build the application using npm run dev
                    sh 'npm run dev'
                }
            }
        }
stage('Building images (node and mongo)') {
steps{
script {
  currentBuild.result = 'SUCCESS'
}
}
}
stage('Deploy to Nexus') {
steps{ 
script {
 currentBuild.result = 'SUCCESS'
}
}

stage('SonarQube Analysis') {
    steps {
        script { 
            def scannerHome = tool 'scanner'
            withSonarQubeEnv {
                sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=squ_f7cf83cb24586294697f80917f4b5b253260d2b1"
            }
        } 
    }
}


    }



    post {
        success {
            // Notify on successful build
            echo 'Build successful!'
        }
        failure {
            // Notify on failed build
            echo 'Build failed!'
        }
    }
}

pipeline {
    agent any

    environment {
        NODE_VERSION = '14.18.0'
    }

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    try {
                        // Install dependencies using npm
                        sh 'npm install'
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    try {
                        // Perform unit tests
                        // Placeholder for actual unit test commands
                        // If tests fail, set currentBuild.result = 'FAILURE'
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }

        // Add error handling to other stages similarly
    }

    post {
        success {
            // Notify on successful build
            echo 'Build successful!'
        }
        failure {
            // Notify on failed build
            echo 'Build failed!'
        }
    }
}
